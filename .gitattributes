# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Configuration files
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# JSON files
*.json text eol=lf

# Shell scripts
*.sh text eol=lf

# Git attributes
.gitattributes text eol=lf
.gitignore text eol=lf

# Binary files
*.pdf binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.zip binary
*.tar.gz binary
